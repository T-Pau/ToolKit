import os
import sys
sys.path.append(os.path.join(os.path.dirname(os.path.dirname(os.path.abspath(__file__))), "python-packages"))

import argparse
import enum
import yaml

import CellImage
import RunlengthEncoder
import Script

class ObjectType(enum.Enum):
    CONSTANT = "constant"
    OMIT = "omit"
    SYMBOL = "symbol"

class Spec:
    @staticmethod
    def decode(yaml, key, default_value=None, required=False):
        if yaml is not None and key in yaml:
            return yaml[key]
        else:
            if required:
                raise RuntimeError(f"missing required directive '{key}'")
            return default_value

    class Component:
        def __init__(self, yaml_spec, spec, bitmap_spec):
            self.name = Spec.decode(yaml_spec, "name")
            self.section = Spec.decode(yaml_spec, "section", bitmap_spec.section)
            self.object_type = ObjectType(Spec.decode(yaml_spec, "object-type", "symbol"))
            self.runlength_encode = Spec.decode(yaml_spec, "runlength-encode", bitmap_spec.runlength_encode)
            self.alignment = Spec.decode(yaml_spec, "alignment")

    class Bitmap:
        def __init__(self, yaml_spec, spec):
            self.filename = Spec.decode(yaml_spec, "file", required=True)
            self.name = Spec.decode(yaml_spec, "name", default_value=os.path.splitext(os.path.basename(self.filename))[0])
            layout = Spec.decode(yaml_spec, "layout", required=True)
            if layout not in CellImage.layouts:
                raise RuntimeError(f"unknown layout '{layout}'")
            self.layout = CellImage.layouts[layout]
            self.unused_colors = Spec.decode(yaml_spec, "unused-colors", default_value=[])
            self.section = Spec.decode(yaml_spec, "section", default_value=spec.section)
            self.runlength_encode = Spec.decode(yaml_spec, "runlength-encode", spec.runlength_encode)

            self.components = {}
            for name, component_spec in Spec.decode(yaml_spec, "components", default_value={}).items():
                component = Spec.Component(component_spec, spec, self)
                self.components[name] = component
    
    def __init__(self, spec_file):
        with open(spec_file, "r") as stream:
            yaml_spec = yaml.safe_load(stream)

            self.directory = os.path.dirname(spec_file)

            self.section = Spec.decode(yaml_spec, "section", default_value="data")
            self.runlength_encode = Spec.decode(yaml_spec, "runlength-encode", default_value=True)

            self.bitmaps = []
            for bitmap_spec in Spec.decode(yaml_spec, "bitmaps", required=True):
                self.bitmaps.append(Spec.Bitmap(bitmap_spec, self))        


class ConvertBitmaps(Script.Script):
    def __init__(self) -> None:
        super().__init__("Convert images to bitmaps.", Script.Option.assembler, Script.Option.include_directories)
        self.arg_parser.add_argument("spec")

    # Get filename of input file.
    def input_filename(self):
        return self.args.spec

    def execute_sub(self):
        spec = Spec(self.args.spec)

        for bitmap_spec in spec.bitmaps:
            filename = self.find_file(bitmap_spec.filename)
            bitmap = CellImage.CellImage(filename, bitmap_spec.layout, bitmap_spec.unused_colors)

            # TODO: check for spec without components

            for component_name in bitmap.component_names():
                if component_name in bitmap_spec.components:
                    component_spec = bitmap_spec.components[component_name]
                else:
                    component_spec = Spec.Component({}, spec, bitmap_spec)

                if component_spec.name is not None:
                    name = component_spec.name
                else:
                    name = f"{bitmap_spec.name}_{component_name}"

                data = bitmap.get(component_name)

                if component_spec.object_type == ObjectType.CONSTANT:
                    self.assembler.constant(name, data)
                elif component_spec.object_type == ObjectType.SYMBOL:
                    if component_spec.runlength_encode:
                        encoder = RunlengthEncoder.RunlengthEncoder()
                        encoder.add_bytes(data)
                        data = encoder.end()
                    self.assembler.bytes_object(name, data, section=component_spec.section, alignment=component_spec.alignment)

ConvertBitmaps().run()
